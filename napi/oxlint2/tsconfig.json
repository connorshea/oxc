{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "composite": true,
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  }
}
